@page
@model ThAmCo.Events.Pages.GuestBookings.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>GuestBooking</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GuestBooking.EventId" class="control-label"></label>
                <select asp-for="GuestBooking.EventId" class ="form-control" asp-items="ViewBag.EventId"></select>
            </div>
            <div class="form-group">
                <label asp-for="GuestBooking.GuestId" class="control-label"></label>
                <select asp-for="GuestBooking.GuestId" class ="form-control" asp-items="ViewBag.GuestId"></select>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="GuestBooking.IsAttending" /> @Html.DisplayNameFor(model => model.GuestBooking.IsAttending)
                </label>
            </div>
            <div class="form-group">
                <br />
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <br />
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

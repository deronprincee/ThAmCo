@page
@model ThAmCo.Events.Pages.Staffings.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Staffing[0].Staff)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Staffing[0].Event)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Staffing[0].Role)
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var staffing in Model.Staffing) {
        <tr>
            <td>
                @staffing.Staff.Name
            </td>
            <td>
                @staffing.Event.Title
            </td>
            <td>
                @staffing.Staff.Role
            </td>
            <td>

            </td>
            <td>
                    <a asp-page="./Edit" asp-route-id="@staffing.StaffingId">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@staffing.StaffingId">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@staffing.StaffingId">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>

@if (Model.ShowFirstAiderWarning)
{
    <div style="color: red; font-weight: bold; margin-bottom: 10px;">
        Warning: One or more events need a first aider.
    </div>
}


